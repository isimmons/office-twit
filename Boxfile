global:
  env:
    - OFFICETWIT_ENV: production
web1:
  name: office-twit
  shared_writable_dirs:
    - app/storage/cache
    - app/storage/database
    - app/storage/logs
    - app/storage/sessions
    - app/storage/views
    - app/storage/work
    - app/storage/meta    
  document_root: /public
  php_version: 5.4.14
  php_extensions:
    - mbstring
    - mcrypt
    - pdo_mysql
    - zip    
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install --prefer-source"
  before_deploy:
    - "php artisan migrate"    
  after_deploy:
    - "php artisan cache:clear"
    - "rm -f storage/views/*"