global:
  env:
    - OFFICETWIT_ENV: production
web1:
  name: office-twit
  shared_writable_dirs:
    - app/storage/cache
    - app/storage/database
    - app/storage/logs
    - app/storage/sessions
    - app/storage/views
    - app/storage/work
    - app/storage/meta
    - app/database/migrations
    - app/database/seeds
  document_root: /public
  php_version: 5.4.14
  php_extensions:
    - mbstring
    - zip
    - pdo_mysql
    - mcrypt
    - memcached
    - curl
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install"
  before_deploy:
    - "php artisan migrate"
    - "php artisan db:seed"
  after_deploy:
    - "rm -f storage/cache/*"
    - "rm -f storage/views/*"